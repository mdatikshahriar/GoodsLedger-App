<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/border"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/one_sided_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Manufacturer"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/fragment_manufacturer_home_profilePicture_ImageView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/default_profile_picture"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_manufacturer_home_manufacturerName_TextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/fragment_manufacturer_home_manufacturerTradeLicenceID_TextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/fragment_manufacturer_home_manufacturerLocation_TextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <LinearLayout
                android:id="@+id/fragment_manufacturer_home_manufacturerSeeMore_LinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="See more ..."
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_forward_black_24dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/border"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/one_sided_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_manufacturer_home_factoryCount_TextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                android:textColor="#115311"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Factories"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="Add Factories"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/fragment_manufacturer_home_addFactories_Button"
                android:background="@drawable/ic_add_circle_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:layout_gravity="center_horizontal"
                style="?android:attr/borderlessButtonStyle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="See All Factories"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/fragment_manufacturer_home_factoriesHere_LinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Here ..."
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_forward_black_24dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/border"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/one_sided_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_manufacturer_home_productsCount_TextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                android:textColor="#115311"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Products"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="Add Products"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/fragment_manufacturer_home_addProducts_Button"
                android:background="@drawable/ic_add_circle_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:layout_gravity="center_horizontal"
                style="?android:attr/borderlessButtonStyle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="See All Products"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/fragment_manufacturer_home_productsHere_LinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Here ..."
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_forward_black_24dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>