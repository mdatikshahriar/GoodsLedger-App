<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="450dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">


    <SurfaceView
        android:id="@+id/popup_addproducts_qrcode_scanner_camera_SurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/dashed_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/popup_addproducts_qrcode_scanner_camera_Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_camera_white_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/popup_addproducts_qrcode_scanner_camera_SurfaceView"
        android:layout_marginBottom="10dp"
        style="?android:attr/borderlessButtonStyle"/>

    <ProgressBar
        android:id="@+id/popup_addproducts_qrcode_scanner_Progressbar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:indeterminateTint="@color/cardview_dark_background"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>